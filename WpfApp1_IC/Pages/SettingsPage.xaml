<Page x:Class="WpfApp1_IC.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная > Настройки">

    <ScrollViewer Background="#FF2B2B2B">
        <StackPanel Margin="20" Width="600" HorizontalAlignment="Center">

            <!-- БЛОК КАМЕРЫ -->
            <Border Background="#FF3A3A3A" CornerRadius="10" Padding="15" Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="Камера" Foreground="White" FontSize="20" Margin="0 0 0 10"/>

                    <CheckBox x:Name="UseCameraCheck"
                              Content="Использовать камеру"
                              Foreground="White"
                              FontSize="16"
                              Margin="0 0 0 10"/>

                    <TextBlock Text="Выбор камеры" Foreground="LightGray"/>
                    <ComboBox x:Name="CameraList"
                              Width="300"
                              Margin="0 5 0 10"/>

                    <Button Content="Обновить список камер"
                            Width="200"
                            Click="RefreshCameras_Click"/>
                </StackPanel>
            </Border>

            <!-- БЛОК MODBUS -->
            <Border Background="#FF3A3A3A" CornerRadius="10" Padding="15" Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="Modbus контроллер" Foreground="White" FontSize="20" Margin="0 0 0 10"/>

                    <CheckBox x:Name="UseModbusCheck"
                              Content="Использовать Modbus"
                              Foreground="White"
                              FontSize="16"
                              Margin="0 0 0 10"/>

                    <TextBlock Text="IP адрес" Foreground="LightGray"/>
                    <DockPanel Margin="0 5 0 10">
                        <TextBox x:Name="ModbusIpBox" Width="200" Margin="0 0 10 0"/>
                        <Button Content="Авто" Width="80" Click="AutoDetectModbus_Click"/>
                    </DockPanel>

                    <TextBlock Text="Порт" Foreground="LightGray"/>
                    <TextBox x:Name="ModbusPortBox" Width="200" Margin="0 5 0 10"/>
                </StackPanel>
            </Border>

            <!-- БЛОК ПРИНТЕРА -->
            <Border Background="#FF3A3A3A" CornerRadius="10" Padding="15" Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="Принтер" Foreground="White" FontSize="20" Margin="0 0 0 10"/>

                    <CheckBox x:Name="UsePrinterCheck"
                  Content="Использовать принтер"
                  Foreground="White"
                  FontSize="16"
                  Margin="0 0 0 10"/>

                    <TextBlock Text="Тип принтера" Foreground="LightGray"/>
                    <ComboBox x:Name="PrinterTypeBox"
                  Width="250"
                  Margin="0 5 0 10">
                        <ComboBoxItem Content="Zebra (ZPL)"/>
                        <ComboBoxItem Content="Domino Ax-Series"/>
                        <ComboBoxItem Content="Videojet"/>
                        <ComboBoxItem Content="Markem-Imaje"/>
                        <ComboBoxItem Content="Эмулятор (заглушка)"/>
                    </ComboBox>

                    <TextBlock Text="IP принтера" Foreground="LightGray"/>
                    <TextBox x:Name="PrinterIpBox"
                 Width="200"
                 Margin="0 5 0 10"/>

                    <TextBlock Text="Порт" Foreground="LightGray"/>
                    <TextBox x:Name="PrinterPortBox"
                 Width="200"
                 Margin="0 5 0 10"/>

                    <Button Content="Проверить подключение"
                Width="200"
                Click="TestPrinter_Click"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
