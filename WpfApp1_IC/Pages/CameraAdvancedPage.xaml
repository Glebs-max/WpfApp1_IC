<Page x:Class="WpfApp1_IC.Pages.CameraAdvancedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CameraAdvancedPage">

    <Grid Background="#FF2B2B2B" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="*"/>
            <!-- Основное содержимое -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Камера — расширенный режим"
                   Foreground="White"
                   FontSize="22"
                   Margin="0,0,0,10"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Блок отбраковки -->
            <Border Grid.Column="0"
                    Margin="0,0,10,0"
                    Background="#FF3A3A3A"
                    CornerRadius="8"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Отбраковка"
                               Foreground="White"
                               FontSize="18"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Задержка срабатывания (мс)"
                               Foreground="LightGray"
                               FontSize="14"/>

                    <TextBox x:Name="RejectDelayBox"
                             Width="120"
                             FontSize="16"
                             Text="500"
                             Margin="0,5,0,10"/>

                    <Button Content="Сохранить задержку"
                            Width="200"
                            Height="35"
                            Click="SaveRejectDelay_Click"
                            Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Блок интеграции и IDMVS -->
            <Border Grid.Column="1"
        Background="#FF3A3A3A"
        CornerRadius="8"
        Padding="15">
                <StackPanel>
                    <TextBlock Text="Интеграция"
                   Foreground="White"
                   FontSize="18"
                   Margin="0,0,0,10"/>

                    <TextBlock Text="Путь к IDMVS"
                   Foreground="LightGray"
                   FontSize="14"/>

                    <DockPanel Margin="0,5,0,10">

                        <TextBox x:Name="IdmvsPathBox"
                     FontSize="14"
                     Text="C:\Program Files\IDMVS\IDMVS.exe"
                     Margin="0,0,10,0"
                     Width="300"
                     VerticalAlignment="Center"/>

                        <Button Content="Обзор"
                    Width="80"
                    Height="30"
                    Click="BrowseIDMVS_Click"/>
                    </DockPanel>

                    <Button Content="Открыть IDMVS"
                Width="200"
                Height="35"
                Click="OpenIDMVS_Click"
                Margin="0,5,0,10"/>

                    <TextBlock Text="Дополнительные настройки камеры и обработки выполняются в IDMVS."
                   Foreground="LightGray"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
