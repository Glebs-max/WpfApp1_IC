<Page x:Class="WpfApp1_IC.Pages.CameraBasicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CameraBasicPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель кнопок -->
            <RowDefinition Height="Auto"/>
            <!-- Строка DataMatrix -->
            <RowDefinition x:Name="ImageRow" Height="300"/>
            <!-- Изображение -->
            <RowDefinition Height="*"/>
            <!-- Лог -->
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Старт" Width="80" Margin="0,0,10,0" Click="Start_Click"/>
            <Button Content="Стоп" Width="80" Margin="0,0,10,0" Click="Stop_Click"/>
            <Button Content="Показать/Скрыть изображение" Width="200" Click="ToggleImage_Click"/>
        </StackPanel>

        <!-- Строка DataMatrix -->
        <TextBox x:Name="DmTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="16"
                 IsReadOnly="True"
                 VerticalContentAlignment="Center"
                 Background="#FFF9F9F9"
                 Margin="0,0,0,10"/>

        <!-- Изображение -->
        <Border Grid.Row="2"
                BorderBrush="#CCC"
                BorderThickness="1"
                Margin="0,0,0,10">
            <Image x:Name="CameraImage"
                   Stretch="Uniform"
                   Visibility="Visible"/>
        </Border>

        <!-- Лог -->
        <TextBox x:Name="LogTextBox"
                 Grid.Row="3"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Background="#FFFAFAFA"/>
    </Grid>
</Page>
