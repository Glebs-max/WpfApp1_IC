<Page x:Class="WpfApp1_IC.Pages.CameraBasicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CameraBasicPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя оранжевая панель -->
            <RowDefinition Height="Auto"/>
            <!-- Строка DataMatrix -->
            <RowDefinition x:Name="ImageRow" Height="300"/>
            <!-- Изображение -->
            <RowDefinition Height="*"/>
            <!-- Лог -->
        </Grid.RowDefinitions>


        <!-- 🔶 ВЕРХНЯЯ ОРАНЖЕВАЯ ПАНЕЛЬ -->
        <Border Grid.Row="0"
                Background="#FFEB8A00"
                Height="60"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,10">
            <DockPanel LastChildFill="False">

                <!-- ЛОГОТИП -->
                <Image Source="/Assets/logo.png"
                       Height="40"
                       Width="40"
                       Stretch="Uniform"
                       DockPanel.Dock="Left"
                       Margin="0,0,20,0"/>

                <!-- КНОПКИ-ИКОНКИ -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center"
                            Margin="0, 0, 15, 0">

                    <!-- Старт/Стоп -->
                    <Button x:Name="StartStopButton"
                            Width="50" Height="50"
                            Background="Transparent"
                            BorderThickness="0"
                            ToolTip="Старт"
                            Click="StartStop_Click">
                        <Image x:Name="StartStopIcon"
                               Source="/../Assets/Start.png"
                               Stretch="Uniform"/>
                    </Button>


                    <!-- Показать/Скрыть изображение -->
                    <Button x:Name="ToggleImageButton"
                            Width="50" Height="50"
                            Background="Transparent"
                            BorderThickness="0"
                            ToolTip="Показать/Скрыть изображение"
                            Click="ToggleImage_Click">
                        <Image x:Name="ToggleImageIcon"
                               Source="/Assets/toggle_close.png"
                               Stretch="Uniform"/>
                    </Button>


                </StackPanel>
            </DockPanel>
        </Border>



        <!-- Строка DataMatrix -->
        <TextBox x:Name="DmTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="16"
                 IsReadOnly="True"
                 VerticalContentAlignment="Center"
                 Background="#FFF9F9F9"
                 Margin="0,0,0,10"/>


        <!-- Изображение -->
        <Border Grid.Row="2"
                BorderBrush="#CCC"
                BorderThickness="1"
                Margin="0,0,0,10">
            <Image x:Name="CameraImage"
                   Stretch="Uniform"
                   Visibility="Visible"/>
        </Border>


        <!-- Лог -->
        <TextBox x:Name="LogTextBox"
                 Grid.Row="3"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Background="#FFFAFAFA"/>
    </Grid>
</Page>
