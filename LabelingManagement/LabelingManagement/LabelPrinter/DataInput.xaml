<UserControl x:Class="LabelPrinter.DataInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelPrinter"
             xmlns:designer="clr-namespace:LabelDesigner;assembly=LabelDesigner"
             d:DataContext="{d:DesignInstance Type=designer:DesignerViewModel}"
             mc:Ignorable="d" Background="#F4F4F4" FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Stretch" Content="Параметры этикетки" Margin="0,0,0,10"/>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel x:Name="LabelParameters"/>
        </ScrollViewer>
    </Grid>
</UserControl>
