<UserControl x:Class="LabelPrinter.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LabelPrinter"
             xmlns:vm="clr-namespace:LabelPrinter.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:ProductsViewModel}"
             mc:Ignorable="d" Background="#F4F4F4">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ProductsTable"
                  ItemsSource="{Binding GTINs}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  RowHeaderStyle="{StaticResource DataGridRowHeaderStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="GTIN" Binding="{Binding GtinId}" ElementStyle="{StaticResource DataGridElementStyle}"/>
                <DataGridTextColumn Width="*" Header="Номенклатура" Binding="{Binding GtinName}" ElementStyle="{StaticResource DataGridElementStyle}"/>
                <DataGridTextColumn Width="*" Header="Доступно" Binding="{Binding CountAviable}" ElementStyle="{StaticResource DataGridElementStyle}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Назад" Height="50" FontSize="24" Margin="0,10,0,0" Click="GetBack_Click" Grid.Row="1"/>
    </Grid>
</UserControl>
