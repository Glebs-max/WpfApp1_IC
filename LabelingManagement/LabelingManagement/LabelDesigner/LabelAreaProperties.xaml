<local:Properties x:Class="LabelDesigner.LabelAreaProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelDesigner"
             xmlns:toolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:models="clr-namespace:LabelDesigner.Models"
             d:DataContext="{d:DesignInstance Type=models:LabelAreaModel}"
             mc:Ignorable="d" Background="#F4F4F4">
    <StackPanel>
        <Label Content="Параметры этикетки" HorizontalContentAlignment="Center"/>
        <Separator/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Vertical" Margin="4">
                <TextBlock Text="Width (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding W, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" DefaultValue="5"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="4" Grid.Column="1">
                <TextBlock Text="Height (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding H, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" DefaultValue="5"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="4" Grid.Row="1">
                <TextBlock Text="Grid Step X (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding GridStepX, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" Minimum="1" DefaultValue="1"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="4" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Grid Step Y (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding GridStepY, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" Minimum="1" DefaultValue="1"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</local:Properties>
