<local:Properties x:Class="LabelDesigner.GeneralProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelDesigner"
             xmlns:toolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:models="clr-namespace:LabelDesigner.Models"
             d:DataContext="{d:DesignInstance Type=models:FieldModel}"
             mc:Ignorable="d" Background="#F4F4F4">
    <StackPanel>
        <Label Content="Общие параметры" HorizontalContentAlignment="Center"/>
        <Separator/>
        <TextBlock Text="Position &amp; Size" TextAlignment="Center"/>
        <Grid MinWidth="150">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Vertical" Margin="4">
                <TextBlock Text="X Position (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding X, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" DefaultValue="5"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="4" Grid.Column="1">
                <TextBlock Text="Y Position (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding Y, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" DefaultValue="5"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="4" Grid.Row="1">
                <TextBlock Text="Width (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding W, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" DefaultValue="5"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="4" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Height (mm)"/>
                <toolkit:DoubleUpDown Value="{Binding H, Mode=TwoWay, Converter={StaticResource UnitsConverter}}" FormatString="F2" Increment="0.25" DefaultValue="5"/>
            </StackPanel>

            <CheckBox IsChecked="{Binding KeepAspectRatio, Mode=TwoWay}" Content="Keep Aspect" Margin="4" Grid.Row="2"/>
        </Grid>
        <StackPanel Orientation="Vertical" Margin="4" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Orientation"/>
            <ComboBox SelectedValue="{Binding Orientation, Mode=TwoWay}" SelectedValuePath="Tag">
                <ComboBoxItem Tag="0" Content="0"/>
                <ComboBoxItem Tag="90" Content="90"/>
                <ComboBoxItem Tag="180" Content="180"/>
                <ComboBoxItem Tag="270" Content="270"/>
            </ComboBox>
        </StackPanel>
        <TextBlock Text="Features" TextAlignment="Center"/>
        <Grid MinWidth="150">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <CheckBox IsChecked="{Binding Inverted, Mode=TwoWay}" Content="Inverted" Margin="4"/>
            <CheckBox IsChecked="{Binding Transparent, Mode=TwoWay}" Content="Transparent" Margin="4" Grid.Column="1"/>
            <CheckBox IsChecked="{Binding MirrorX, Mode=TwoWay}" Content="Mirror X" Margin="4" Grid.Row="1"/>
            <CheckBox IsChecked="{Binding MirrorY, Mode=TwoWay}" Content="Mirror Y" Margin="4" Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </StackPanel>
</local:Properties>
