<Window x:Class="LabelDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelDesigner"
        mc:Ignorable="d" FontFamily="Bahnschrift" FontSize="17"
        Title="MainWindow" Height="720" Width="1280">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#F0F0F0" FontFamily="Bahnschrift" FontSize="17">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="FileOpen_Click"/>
                <Separator/>
                <MenuItem Header="Save" Click="FileSave_Click"/>
                <Separator/>
                <MenuItem Header="Print" Click="FilePrint_Click"/>
                <Separator/>
                <MenuItem Header="Clear Queue" Click="FileClearQueue_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="FileExit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Tools"/>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Toolbox -->
                <ColumnDefinition Width="Auto"/>
                <!-- Основная область -->
                <ColumnDefinition Width="*"/>
                <!-- Разделитель -->
                <ColumnDefinition Width="5"/>
                <!-- Панель свойств -->
                <ColumnDefinition Width="320" MinWidth="120"/>
            </Grid.ColumnDefinitions>

            <local:DesignerToolbox Grid.Column="0"/>

            <local:DesignerCanvas x:Name="DesignerCanvas" Grid.Column="1" Panel.ZIndex="-1"/>

            <GridSplitter Grid.Column="2"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ResizeBehavior="PreviousAndNext"
                  ShowsPreview="True"
                  Background="MediumVioletRed"
                  Width="5"/>

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <local:PropertiesPanel x:Name="PropertiesPanel" Background="#F4F4F4"/>
                <GridSplitter Grid.Row="1" ResizeDirection="Rows"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ResizeBehavior="PreviousAndNext"
                    ShowsPreview="True"
                    Background="MediumVioletRed"
                    Height="5"/>
                <local:DesignerExplorer Grid.Row="2"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
